<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.goattechnologies.pos.Login1Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Text fx:id="idPrompt" text="Enter your employee ID:"/>
    <TextField fx:id="employeeID" promptText="Employee ID" prefWidth="200" prefHeight="40"/>
    <Button text="Login" onAction="#onLoginClick" styleClass="black-btn" prefWidth="200" prefHeight="60"/>
</VBox>
