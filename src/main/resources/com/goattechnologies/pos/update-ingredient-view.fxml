<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.goattechnologies.pos.UpdateIngredientController">
    <Label fx:id="updateIngredient" text="Update Ingredient" />
    <Label fx:id="name" text="Name:" />
    <TextField fx:id="ingredientNameField" maxWidth="440" prefHeight="80"/>
    <Label fx:id="quantity" text="Quantity:" />
    <TextField fx:id="quantityField" maxWidth="220" prefHeight="80"/>
    <Label fx:id="cost" text="Cost ($):" />
    <TextField fx:id="costField" maxWidth="220" prefHeight="80"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Update" onAction="#updateIngredient" styleClass="black-btn"/>
        <Button text="Delete" onAction="#deleteIngredient" styleClass="red-btn"/>
    </HBox>
    <Button text="Back" onAction="#backToInventory" styleClass="black-btn-sm"/>
</VBox>
